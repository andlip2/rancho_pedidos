                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/buttonAdicionarJose"
                app:layout_constraintStart_toEndOf="@+id/buttonDiminuirJose"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <Button
                android:id="@+id/buttonAdicionarJose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="0dp"
                android:contentDescription="@string/action_sign_in"
                android:includeFontPadding="false"
                app:backgroundTint="#00673AB7"
                app:icon="@drawable/ic_adicionar_preto_24"
                app:iconGravity="textEnd"
                app:iconPadding="0dp"
                app:iconSize="28dp"
                app:iconTint="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.412"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_marginBaseline="0dp" />

            <Button
                android:id="@+id/buttonDiminuirJose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="0dp"
